<div class="studentPanel">
    <aside class="menu">
        <p class="menu-label">
            User Name
        </p>
        <ul class="menu-list">
          
            {{#if teacher}}
                {{#each classes}}
                <li data-id={{id}}><button class="button classBtn is-primary">{{name}}</button></li>
                {{/each}}
            {{/if}}
            {{!-- each loop for students --}}
        
           
                {{#each students}}
                    <li data-id={{id}}><button class="button studentBtn is-primary">{{first_name}} {{last_name}}, {{grade}}</button></li>
                {{/each}}

        </ul>
    </aside>
</div>