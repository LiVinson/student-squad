{{!-- Insert navbar partial --}}
{{> navbar}}
{{!-- Insert tabs partial --}}
<div class="column">
{{> tutortabs}}
<div class="columns">
<div class="column is-1"> 
    {{!-- Jeff - add #student Code input and label to accept student-code from tutor --}}
            <a class="button is-primary" id="addStudent" href="">Add Student</a>
</div>
{{!-- for each unread Message --}}
{{!-- Jeff - only display a number (1 to 5), message, author, time, and maybe an icon that can be clicked for each message. On click, modal populates with message body. 
On close, that message is changed to read --}}
{{#each messages}}
    {{#if tutor_read}}
    <div class="column is-two-thirds">
    <h1 class="title">You're all caught up!</h1>
</div>
{{/if}}
    {{#unless tutor_read}}
    {{!-- Builds a message element --}}
        <article class="message is-dark {{source}}">
            <div class="message-header">
                <p>{{studentName}} {{date}}</p>
                <button class="delete" aria-label="delete"></button>
            </div>
            {{!-- Message text --}}
            <div class="message-body">
                {{text}}
            </div>
        </article>

    {{/unless}}
{{/each}}
</div>
</div>
<div class="modal">
    <div class="modal-background"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p>Add a Student</p>
        <button class="delete" area-label="close"></button>
        </header>
        <section class="modal-card-body">
            <div class="field">
                <label class="label">Enter the Student's code</label>
                <div class="control">
                    <input class="input is-info" type="text" placeholder="Student Code">
                </div>
            </div>
            <input type="submit" class="button is-info" value="Submit" id="addStudent">
        </section>
    </div>
</div>
